Meteor.methods({    
    removeInventory : function(itemId, qty){
        check(itemId, String);
        check(qty, Match.Integer);
        if(qty < 1){
            Meteor.throw(new Match.Error);
        }
        Products.update({_id : itemId}, {$inc : {available : (qty*-1)}});
        return true;
    }
}); 